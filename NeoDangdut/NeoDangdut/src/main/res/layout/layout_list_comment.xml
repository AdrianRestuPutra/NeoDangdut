<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/list_view_comment_thumbnail"
            android:layout_width="@dimen/comment_thumbnail_width"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_menu_camera" />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_view_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/white_font"
            android:textSize="@dimen/comment_text_large"/>

        <TextView
            android:id="@+id/list_view_comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ini Comment"
            android:textColor="@color/white_font"
            android:textSize="@dimen/comment_text_normal"/>
    </LinearLayout>


</LinearLayout>