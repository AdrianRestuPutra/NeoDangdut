<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/popup_forgot_width"
        android:layout_height="@dimen/popup_forgot_height"
        android:layout_centerInParent="true"
        android:background="@color/main_bg"
        android:orientation="vertical"
        android:padding="@dimen/dialog_purchase_padding">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/popup_forgot_window_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="GUNAKAN KATA SANDI"
                android:textColor="@color/white_font"
                android:textSize="@dimen/dialog_purchase_text_title" />

            <ImageView
                android:id="@+id/popup_forgot_exit"
                android:layout_width="@dimen/dialog_purchase_icon"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_exit" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/tab_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <!-- Item Detail -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masukkan email yang digunakan untuk masuk ke Neo Dangdut"
                    android:textColor="@color/white_font"
                    android:textSize="@dimen/tab_text_size"/>

                <EditText
                    android:id="@+id/popup_forgot_input_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_edittext_height"
                    android:layout_marginTop="@dimen/margin_pager_tab"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/bg_input"
                    android:paddingLeft="@dimen/signup_padding"
                    android:hint="Email"
                    android:textColorHint="@color/purple_font"
                    android:textColor="@color/white_font"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/tab_divider" />

            <!-- Price -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">


                <!-- Button -->
                <RelativeLayout
                    android:id="@+id/popup_forgot_button_send"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_button_height"
                    android:background="@drawable/bg_btn_purple"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/popup_forgot_button_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="SEND"
                        android:textColor="@color/white_font"
                        android:textSize="@dimen/dialog_purchase_text_title" />

                </RelativeLayout>


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>