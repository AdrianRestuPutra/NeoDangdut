<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/search_shop_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Songs -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/search_panel_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/search_title_container_height"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/search_shop_title_song"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SONGS"
                            android:textColor="@color/white_font"
                            android:textSize="@dimen/tab_text_large_size" />

                        <ImageView
                            android:layout_width="@dimen/search_title_icon_width"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/search_title_icon_margin"
                            android:adjustViewBounds="true"
                            android:src="@drawable/icon_arrow_right" />

                    </LinearLayout>

                    <ListView
                        android:id="@+id/search_shop_song_listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></ListView>
                </LinearLayout>

                <!-- ALBUM -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/search_panel_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/search_title_container_height"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/search_shop_title_album"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ALBUMS"
                            android:textColor="@color/white_font"
                            android:textSize="@dimen/tab_text_large_size" />

                        <ImageView
                            android:layout_width="@dimen/search_title_icon_width"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/search_title_icon_margin"
                            android:adjustViewBounds="true"
                            android:src="@drawable/icon_arrow_right" />

                    </LinearLayout>

                    <ListView
                        android:id="@+id/search_shop_album_listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></ListView>
                </LinearLayout>


                <!-- VIDEO -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/search_panel_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/search_title_container_height"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/search_shop_title_video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VIDEOS"
                            android:textColor="@color/white_font"
                            android:textSize="@dimen/tab_text_large_size" />

                        <ImageView
                            android:layout_width="@dimen/search_title_icon_width"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/search_title_icon_margin"
                            android:adjustViewBounds="true"
                            android:src="@drawable/icon_arrow_right" />

                    </LinearLayout>

                    <ListView
                        android:id="@+id/search_shop_video_listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></ListView>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>


</RelativeLayout>