<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_video_thumbnail_container_height">
        <ImageView
            android:id="@+id/list_view_top_video_thumbnail"
            android:layout_width="@dimen/top_video_thumbnail_width"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_menu_camera"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_video_detail_container_height">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_view_top_video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video Title"
                android:textColor="@color/white_font"
                android:textSize="@dimen/top_list_font_title"/>

            <TextView
                android:id="@+id/list_view_top_video_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist Name"
                android:textColor="@color/white_font"
                android:textSize="@dimen/top_list_font_regular"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/list_view_top_video_opt_button"
            android:layout_width="@dimen/top_list_opt_icon_width"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_more_white"/>
    </RelativeLayout>
</LinearLayout>