<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_bg"
        android:orientation="vertical">

        <!-- Featured -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/shop_music_top_song_featured_panel_height"
            android:background="@color/black_panel">

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/top_list_padding"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOP 50 SONGS"
                android:textColor="@color/white_font"
                android:textSize="@dimen/top_list_font_title" />

            <ListView
                android:id="@+id/shop_music_top_song_listview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/shop_music_top_song_list_height"
                android:layout_marginTop="@dimen/top_list_padding">

            </ListView>
        </LinearLayout>


    </LinearLayout>


</ScrollView>
