<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    android:padding="@dimen/setting_padding">

    <!-- Item -->
    <RelativeLayout
        android:id="@+id/setting_toggle_notif"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/setting_item_margin_top">

                <ImageView
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/icon_notif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_text_margin"
                    android:text="NOTIFICATIONS"
                    android:textColor="@color/white_font"
                    android:textSize="@dimen/setting_text_large" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/setting_item_margin_top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_text_margin"
                    android:text="Turn nofications on or off"
                    android:textColor="@color/purple_font"
                    android:textSize="@dimen/setting_text_small" />

                <ImageView
                    android:id="@+id/icon_toggle_notif"
                    android:layout_width="@dimen/setting_toggle_width"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/btn_toggle_off" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/tab_divider" />

    <!-- Downlaod -->
    <RelativeLayout
        android:id="@+id/setting_toggle_download"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/setting_item_margin_top">

                <ImageView
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/icon_download_setting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_text_margin"
                    android:text="DOWNLOADS"
                    android:textColor="@color/white_font"
                    android:textSize="@dimen/setting_text_large" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/setting_item_margin_top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_text_margin"
                    android:text="Only on Wi-Fi connections"
                    android:textColor="@color/purple_font"
                    android:textSize="@dimen/setting_text_small" />

                <ImageView
                    android:id="@+id/icon_toggle_download"
                    android:layout_width="@dimen/setting_toggle_width"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/btn_toggle_off" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <!-- Download End -->

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/tab_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height_large">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/setting_help_support_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/setting_item_margin_top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_text_margin"
                    android:text="@string/setting_help_support"
                    android:textColor="@color/white_font"
                    android:textSize="@dimen/setting_text_large" />

                <ImageView
                    android:layout_width="@dimen/setting_icon_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/setting_icon_margin"
                    android:adjustViewBounds="true"
                    android:src="@drawable/icon_download_setting" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/setting_privacy_policy_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/setting_item_margin_top_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_text_margin"
                    android:text="Privacy Policy"
                    android:textColor="@color/white_font"
                    android:textSize="@dimen/setting_text_large" />

                <ImageView
                    android:layout_width="@dimen/setting_icon_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/setting_icon_margin"
                    android:adjustViewBounds="true"
                    android:src="@drawable/icon_download_setting" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/setting_about_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/setting_item_margin_top_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_text_margin"
                    android:text="About"
                    android:textColor="@color/white_font"
                    android:textSize="@dimen/setting_text_large" />

                <ImageView
                    android:layout_width="@dimen/setting_icon_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/setting_icon_margin"
                    android:adjustViewBounds="true"
                    android:src="@drawable/icon_download_setting" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/tab_divider" />

</LinearLayout>