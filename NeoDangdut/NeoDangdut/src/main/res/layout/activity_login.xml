<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pitados.neodangdut.activities.LoginActivity">

    <!-- Login -->
    <RelativeLayout
        android:id="@+id/panel_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:padding="@dimen/activity_horizontal_margin"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Logo -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <ImageView
                    android:layout_width="@dimen/login_logo_width"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_menu_send" />
            </RelativeLayout>
            <!-- End Logo -->

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/dividerColor" />

            <!-- Facebook button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5">

                <Button
                    android:id="@+id/login_facebook_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_button_height"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/login_button_margin"
                    android:layout_marginRight="@dimen/login_button_margin"
                    android:text="Login With Facebook" />
            </RelativeLayout>
            <!-- End FB button -->

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/dividerColor" />

            <!-- Login Form -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/login_form_username"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/login_button_height"
                        android:layout_marginLeft="@dimen/login_button_margin"
                        android:layout_marginRight="@dimen/login_button_margin"
                        android:hint="Username" />

                    <EditText
                        android:id="@+id/login_form_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/login_button_height"
                        android:layout_marginLeft="@dimen/login_button_margin"
                        android:layout_marginRight="@dimen/login_button_margin"
                        android:hint="Password" />

                    <Button
                        android:id="@+id/login_button_login"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/login_button_height"
                        android:layout_marginLeft="@dimen/login_button_margin"
                        android:layout_marginRight="@dimen/login_button_margin"
                        android:text="Login"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>
            </RelativeLayout>
            <!-- End Login Form -->

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/dividerColor" />

            <!-- Signup button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5">

                <Button
                    android:id="@+id/login_signup"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_button_height"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/login_button_margin"
                    android:layout_marginRight="@dimen/login_button_margin"
                    android:text="Sign Up"/>
            </RelativeLayout>
            <!-- End Signup button -->
        </LinearLayout>

    </RelativeLayout>
    <!-- End Login -->

    <!-- Signup -->
    <RelativeLayout
        android:id="@+id/panel_signup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <!-- Signup page 1 -->
                <!-- End Signup page 1 -->

                <!-- Signup page 2 -->
                <!-- End Signup page 2 -->

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
    <!-- End Signup -->
</RelativeLayout>
