<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <LinearLayout
        android:layout_width="@dimen/shop_video_featured_width"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/shop_video_featured_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/thumb_vid_sample"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/shop_featured_title_section">
            <TextView
                android:id="@+id/shop_video_featured_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Song Title"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white_font"
                android:textSize="@dimen/shop_featured_title_text"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/shop_featured_name_section"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shop_video_featured_artist"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Caca Handika"
                android:gravity="left"
                android:textColor="@color/white_font"
                android:textSize="@dimen/shop_featured_name_text"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/shop_video_featured_buy_button"
            android:layout_width="@dimen/shop_video_featured_button_buy_width"
            android:layout_height="@dimen/shop_featured_button_section"
            android:background="@drawable/btn_price_artist_song">

            <TextView
                android:id="@+id/shop_video_featured_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/shop_featured_price_margin_left"
                android:text="Rp 15000"
                android:textColor="@color/purple_font"
                android:textSize="@dimen/shop_featured_price_text"/>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>